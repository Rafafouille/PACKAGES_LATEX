        \matInertieComposantes{#1}
            {
                \frac{#2\left(3#3^2+#4^2\right)}{12}  &0  &0\\
                0   &\frac{#2#3^2}{2} &0\\
                0   &0  &\frac{#2\left(3#3^2+#4^2\right)}{12}
            }
            {#5}
    }

\newcommandx*{\IGSCylindreZ}[5][1=G,2=M,5=\rR{}]
