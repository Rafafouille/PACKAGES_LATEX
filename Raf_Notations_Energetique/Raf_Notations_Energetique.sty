\newcommand{\PCallig}	{\ensuremath{\mathscr{P}}}
\newcommandx{\puissance}[3][3=]	{\ifthenelse{\equal{#3}{}}
					{\ensuremath{\PCallig_{#1\ifthenelse{\equal{#2}{}}{}{,#2}}}}
					{\f {\ensuremath{\PCallig_{#1\ifthenelse{\equal{#2}{}}{}{,#2}}}}{#3}}
				}

