\renewcommandx*{\div}[2][1=,2=]{
                            \ifthenelse{\equal{#1}{}}
                                {\ensuremath{\text{div}}}
                                {
                                    \ifthenelse{\equal{#2}{}}
                                        {\f{\text{div}}{#1}}
                                        {
                                            \ifthenelse{\equal{#1}{0}}
                                                {\f{\text{div}}{#2}}
                                                {
                                                    \ifthenelse{\equal{#1}{1}}
                                                        {\f{\vecteur{\text{div}}}{#2}}
                                                        {
                                                            \ifthenelse{\equal{#1}{2}}
                                                                {\f{\dbarre{\text{div}}}{#2}}
                                                                {\f{\text{div}^{(#1)}}{#2}}
                                                        }
                                                }
                                        }
                                }
                        }
